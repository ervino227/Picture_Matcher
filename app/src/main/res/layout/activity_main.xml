<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/reset_button_label"
        app:backgroundTint="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_12"
        app:layout_constraintVertical_bias="0.136" />

    <ImageView
        android:id="@+id/view_1"
        style="@style/image_size"
        android:layout_marginStart="16dp"
        android:foreground="@drawable/forground_image"
        app:layout_constraintBottom_toBottomOf="@+id/view_2"
        app:layout_constraintEnd_toStartOf="@+id/view_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_2" />
    <!-- -->

    <ImageView
        android:id="@+id/view_2"
        style="@style/image_size"
        android:foreground="@drawable/forground_image"
        app:layout_constraintBottom_toBottomOf="@+id/view_3"
        app:layout_constraintEnd_toStartOf="@+id/view_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_1"
        app:layout_constraintTop_toTopOf="@+id/view_3"
        tools:srcCompat="@drawable/house_image" />

    <ImageView
        android:id="@+id/view_3"
        style="@style/image_size"
        android:foreground="@drawable/forground_image"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_2"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/star_image" />

    <ImageView
        android:id="@+id/view_4"
        style="@style/image_size"
        android:foreground="@drawable/forground_image"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/view_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_1"
        tools:srcCompat="@drawable/star_image" />

    <ImageView
        android:id="@+id/view_5"
        style="@style/image_size"
        android:foreground="@drawable/forground_image"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/view_6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_4"
        app:layout_constraintTop_toBottomOf="@+id/view_1"
        tools:srcCompat="@drawable/moon_image" />

    <ImageView
        android:id="@+id/view_6"
        style="@style/image_size"
        android:foreground="@drawable/forground_image"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_5"
        app:layout_constraintTop_toBottomOf="@+id/view_3"
        tools:srcCompat="@drawable/sun_image" />

    <ImageView
        android:id="@+id/view_7"
        style="@style/image_size"
        android:foreground="@drawable/forground_image"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/view_8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_4"
        tools:srcCompat="@drawable/moon_image" />

    <ImageView
        android:id="@+id/view_8"
        style="@style/image_size"
        android:foreground="@drawable/forground_image"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/view_9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_7"
        app:layout_constraintTop_toBottomOf="@+id/view_5"
        tools:srcCompat="@drawable/diamond_image" />

    <ImageView
        android:id="@+id/view_9"
        style="@style/image_size"
        android:foreground="@drawable/forground_image"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_8"
        app:layout_constraintTop_toBottomOf="@+id/view_6"
        tools:srcCompat="@drawable/target_image" />

    <ImageView
        android:id="@+id/view_10"
        style="@style/image_size"
        android:foreground="@drawable/forground_image"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/view_11"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_7"
        tools:srcCompat="@drawable/house_image" />

    <ImageView
        android:id="@+id/view_11"
        style="@style/image_size"
        android:foreground="@drawable/forground_image"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/view_12"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_10"
        app:layout_constraintTop_toBottomOf="@+id/view_8"
        tools:srcCompat="@drawable/target_image" />

    <ImageView
        android:id="@+id/view_12"
        style="@style/image_size"
        android:foreground="@drawable/forground_image"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_11"
        app:layout_constraintTop_toBottomOf="@+id/view_9"
        tools:srcCompat="@drawable/sun_image" />

    <TextView
        android:id="@+id/score_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/matches_string"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_10" />
</androidx.constraintlayout.widget.ConstraintLayout>